{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug C Project",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/so_long",
          "args": ["maps/map_prueba.ber"],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
      }
  ]
}